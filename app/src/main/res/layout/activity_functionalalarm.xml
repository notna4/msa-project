<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".FunctionalAlarmActivity">
    <!--Added Time picker just to pick the alarm time-->
    <!--gravity is aligned to center-->

    <!--Added Toggle Button to set the alarm on or off-->
    <!--ByDefault toggleButton is set to false-->
    <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numbersBackgroundColor="@color/cardview_light_background"
            android:numbersTextColor="#685BDC"
    />
    <ToggleButton
            android:id="@+id/stopAlarmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:checked="false"
            android:onClick="OnToggleClicked"
            android:textColor="#685BDC"
    />

    <!--"OnToggleClicked" method will be implemented in MainActivity.java -->

</LinearLayout>