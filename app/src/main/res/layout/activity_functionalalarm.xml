<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/black"
        tools:context=".FunctionalAlarmActivity">
    <!-- Set text color to white -->/>

    <TextView
            android:id="@+id/topTextView"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:text="Add your alarm"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:paddingTop="30dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"/>
    <!--ByDefault stopAlarmButton is set to false-->
    <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="419dp"
            android:layout_height="420dp"
            android:layout_gravity="center"
            android:timePickerMode="spinner"
            android:theme="@style/ClockTheme"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <ToggleButton
            android:id="@+id/stopAlarmButton"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:checked="false"
            android:onClick="OnToggleClicked"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#685BDC"
    />

    <!--"OnToggleClicked" method will be implemented in MainActivity.java -->
</LinearLayout>